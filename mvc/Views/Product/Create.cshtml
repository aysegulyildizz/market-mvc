@model mvc.Models.Product

<h2>Add New Product</h2>

<form method="post">
    <div class="mb-3">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input type="number" step="0.01" class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>

    </div>
    <div class="mb-3">
        <label>Stock</label>
        <input type="number" class="form-control" asp-for="Stock" />
        <span class="text-danger" asp-validation-for="Stock"></span>

    </div>

    <div class="mb-3">
        <label>Category</label>
        <select class="form-select" asp-for="KategoriId" asp-items="ViewBag.Kategoriler">
            <option value="">Kategori se√ßiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="KategoriId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}